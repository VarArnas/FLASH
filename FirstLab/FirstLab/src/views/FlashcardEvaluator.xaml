<UserControl x:Class="FirstLab.FlashcardEvaluator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="450" Width="800"
             Loaded="Evaluator_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,55,0,0" Text="Your question" Width="192" Background="Bisque" Name="QuestionTextBox" Height="70"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,143,0,0" Text="Your answer" Width="192" Background="Bisque" Name="AnswerTextBox" Height="67"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,313,0,0" Text="" Width="192" Background="Bisque" x:Name="PossibilityTextBox" Height="52"/>
        <Button Content="Check&#xD;&#xA;" HorizontalAlignment="Left" Margin="87,225,0,0" VerticalAlignment="Top" Width="74" Height="21" Click="selectButton"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,225,0,0" Text="" Width="192" Background="Bisque" x:Name="UserAnswerTextBox" Height="52"/>
    </Grid>
</UserControl>
